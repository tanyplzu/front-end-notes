.home .hero {
  img {
    margin: 0.5rem auto 1rem !important;
  }

  h1 {
    font-size: 2.8rem !important;
    margin: 1.2rem auto !important;
  }
}

@media (max-width: 719px) {
  .home .feature {
    padding: 0 !important;
  }

  h1 {
    font-weight: normal;
  }

  h2 {
    font-weight: normal;
  }

  h3, h4, h5 {
    font-weight: normal;
  }

  .header-anchor {
    display: none;
  }
}

@media (max-width: 419px) {
  // 手机端样式优化
  .theme-default-content:not(.custom) {
    padding: 0.8rem;
  }

  pre {
    font-size: 13px !important;
  }

  pre span {
    line-height: 1.6;
  }

  p {
    font-size: 16px !important;
  }

  h1 {
    font-size: 24px;
  }

  h2 {
    font-size: 22px;
    font-weight: 500;
  }

  h3 {
    font-size: 18px;
    font-weight: 500;
  }

  h4 {
    font-size: 18px;
  }

  .sidebar-button {
    left: 0.3rem !important;
  }

  .sidebar .nav-links .nav-item {
    padding-left: 1rem !important;
  }

  .theme-container {
    width: 100%;
    overflow-x: hidden;
  }
}

body {
  font: PingFang SC, Lantinghei SC, Microsoft Yahei, Hiragino Sans GB, Microsoft Sans Serif, WenQuanYi Micro Hei, Helvetica, sans-serif;

  p {
    line-height: 1.76;
    text-align: justify;
  }
}

a {
  font-weight: 400;
}

code {
  font-weight: 400;
}

.sidebar-heading {
  font-weight: normal !important;
}

.sidebar > .sidebar-links > li > a.sidebar-link {
  font-weight: normal !important;
}

a.sidebar-link.active {
  font-weight: normal !important;
}

.navbar .site-name {
  font-size: 1rem !important;
  font-weight: 400 !important;
}

.dropdown-wrapper .dropdown-title {
  font-weight: normal !important;
}

